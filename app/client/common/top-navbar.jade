template(name='TopNavbar')
  nav.navbar.navbar-inverse.navbar-fixed-top
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(
            type="button"
            data-toggle="collapse"
            data-target="#top-navbar-collapse"
            aria-expanded="false"
        )
          span.sr-only #{_ 'toggle_navigation'}
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#{pathFor route='home'}") Hunting Kiwi
      div#top-navbar-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") #{_ 'polls'}
          if currentUser
            li
              a(href="#") #{_ 'profile'}
          li
            if currentUser
              a(href="#" data-action="log-out") #{_ 'log_out'}
            else
              a(href="#" data-action="sign-in") #{_ 'sign_in'}
